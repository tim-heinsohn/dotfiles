[alias]
    ci = commit
    co = checkout
    cof = !git checkout `git branch | fzf`
    st = status
    ss = stash save
    sp = stash pop
    rv = remote -v
    fa = fetch --all

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore
    fileMode = true
    editor = nvim -u ~/.vimrc.minimal -n
    pager = less -R --chop-long-lines --no-init --quit-if-one-screen

[credential]
    helper = "!gopass git-credential $@"

[diff]
    tool = nvimdiff

[diff "rspec"]
    xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario|background)[ \t].*)$"

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[init]
    defaultBranch = main

[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false

[pack]
    threads = 0

[pager] # --no-pager (for opt out)
    dd = true
    dsf = true
    icdiff = true
    status = true

[user]
    email = smile@friendsoft.de
    name = Tim Heinsohn

[rebase]
    # %h: hash, %an: author name, %ae: author email, %s: subject
    # (the configured format is appended to "pick %h")
    instructionFormat = "[%an]: %s"

# vim: ft=gitconfig
