[alias]
    ci = commit
    co = checkout
    cof = !git checkout `git branch | fzf` # checkout (branch) via fzf
    rb = "!git checkout $(git reflog -n 100 | grep -oP 'checkout: moving from \\K[^ ]+' | awk '!seen[$0]++' | head -7 | fzf)" # recent branch
    rv = remote -v
    fa = fetch --all
    tu = !git ls-files --others --exclude-standard | tree --fromfile # tree unversioned
    main-delta = "!f(){ base=$(git merge-base HEAD origin/main); echo \"base: $base\"; git log --oneline \"$base..origin/main\"; git diff --name-status \"$base..origin/main\"; git diff \"$base..origin/main\"; }; f"

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore
    fileMode = true
    editor = nvim -u ~/.vimrc.minimal -n
    pager = delta

[credential]
    helper = "!gopass git-credential $@"

[delta]
    navigate = true       # use n and N to move between diff sections
    line-numbers = true
    side-by-side = false  # set to true for side-by-side view
    syntax-theme = Monokai Extended
    # Dark theme - let delta auto-detect or use these popular alternatives:
    # syntax-theme = Dracula
    # syntax-theme = Coldark-Dark
    # syntax-theme = DarkNeon

[interactive]
    diffFilter = delta --color-only

[diff]
    tool = nvimdiff

[diff "rspec"]
    xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario|background)[ \t].*)$"

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[init]
    defaultBranch = main

[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false

[pack]
    threads = 0

[pager] # --no-pager (for opt out)
    dd = true
    dsf = true
    icdiff = true
    status = true
    diff = delta
    show = delta
    log = delta

[user]
    email = smile@friendsoft.de
    name = Tim Heinsohn

[rebase]
    # %h: hash, %an: author name, %ae: author email, %s: subject
    # (the configured format is appended to "pick %h")
    instructionFormat = "[%an]: %s"

# vim: ft=gitconfig
