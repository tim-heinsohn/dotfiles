# ALIASES

# Basics
alias l='ls -lh --color=auto'
alias ll='ls -lah --color=auto'

# Docker
alias dc='docker compose'
alias sen='docker run -v /var/run/docker.sock:/run/docker.sock -ti -e TERM tomastomecek/sen' #docker #tui #cli #container
alias docui='docker run --rm -itv /var/run/docker.sock:/var/run/docker.sock skanehira/docui' #docker #tui #cli #ls #inspect

# Dotfiles
alias bl='bombadil link'

# Keys
alias xx='xmodmap ~/.Xmodmap'
alias XX='xdotool key Caps_Lock && xmodmap ~/.Xmodmap' # ;)

# Vim
alias nviminit="cp ${DOTFILES_DIR}/vim/vimrc.template .nvimrc && touch .viminfo && touch .vimsession"
alias vimrmswp='find . -type f -name ".*.swp" -exec rm {} \;'

# vim: set ft=zsh:
